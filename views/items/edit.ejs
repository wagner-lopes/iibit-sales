<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit - <%=item.summary%></h1>
        <div style="width: 60%; margin: 25px auto;">
            <form action="/items/<%=item._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input value="<%=item.summary%>" class="form-control" type="text" name="item[summary]" autofocus>
                </div>
                <div class="form-group">
                    <input value="<%=item.image%>" class="form-control" type="text" name="item[image]">
                </div>
                <div class="form-group">
                    <input value="<%=item.price%>" class="form-control" type="number" name="item[price]"  min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" name="item[description]" rows="10">
                        <%=item.description%>
                    </textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Save</button>
                </div>
            </form>
            <a class="btn btn-warning btn-block" href="/items">Cancel</a>
        </div>
        </br>
        </br>
    </div>
</div>

<% include ../partials/footer %>