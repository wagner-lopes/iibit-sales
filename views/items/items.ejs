<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to IIBIT Clothes and Accessories!</h1>
            <p>View our hand-picked items from all over the world!</p>
            <p>
                <a class="btn btn-primary btn-large" href="/items/new">Add new item</a>
            </p>
        </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% items.forEach(function(item){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= item.image %>">
                    <div class="caption">
                        <h4><%= item.summary %> - $<%= item.price %></h4>                    
                    </div>
                    <p>
                        <a class="btn btn-primary" href="/items/<%= item._id %>">More Info</a>                    
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>